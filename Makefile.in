.PHONY: depend dialyze clean cleandep distclean all

###----------------------------------------------------------------------
### Orientation information
###----------------------------------------------------------------------

TOP  = $(PWD)
SRC  = $(PWD)/src
INCLUDE = $(PWD)/include
EBIN = $(PWD)/ebin
PRIV = $(PWD)/priv
UTEST = $(PWD)/utest
LIB = $(PWD)/lib
ERLC = @ERLC@
MECK = $(realpath @MECK@)

###----------------------------------------------------------------------
### Flags
###----------------------------------------------------------------------

WARNS = +warn_exported_vars +warn_unused_import +warn_missing_spec #+warn_untyped_record
ERLC_INCLUDE = -I $(INCLUDE)
ERLC_FLAGS = +debug_info $(WARNS)
ERLC_MACROS = -DEBIN=\"$(EBIN)\" -DPYTHON_PATH=\"@PYTHON_PATH@\" -DPRIV=\"$(PRIV)\"

HRL_FILES = \
	cuter_macros \
	eunit_config

SRC_MODULES = \
	cuter_binlib \
	cuter_lib \
	cuter \
	cuter_codeserver \
	cuter_cerl \
	cuter_monitor \
	cuter_log \
	cuter_iserver \
	cuter_eval \
	cuter_symbolic \
	cuter_mock \
	cuter_env \
	cuter_erlang \
	cuter_json \
	cuter_pp \
	cuter_bfs_scheduler \
	cuter_scheduler_maxcover \
	cuter_analyzer \
	cuter_solver \
	cuter_merger \
	cuter_types

UTEST_MODULES = \
	cuter_tests_lib \
	cuter_tests \
	cuter_codeserver_tests \
	cuter_cerl_tests \
	cuter_monitor_tests \
	cuter_iserver_tests \
	cuter_eval_tests \
	cuter_json_tests \
	cuter_solver_tests \
	cuter_erlang_tests

###----------------------------------------------------------------------
### Targets
###----------------------------------------------------------------------

TARGETS = \
	cuter_target \
	utest_target

ERL_DIRS = \
	$(SRC) \
	$(UTEST)

vpath %.erl $(ERL_DIRS)

vpath %.hrl $(INCLUDE)

default: $(TARGETS) dialyze

fast: cuter_target

suite: utest_target

all: default utest

cuter_target: $(SRC_MODULES:%=$(EBIN)/%.beam)

utest_target: $(UTEST_MODULES:%=$(EBIN)/%.beam)

$(EBIN)/%.beam: %.erl
	$(ERLC) $(ERLC_INCLUDE) $(ERLC_FLAGS) $(ERLC_MACROS) -o $(EBIN) $<

utest: $(TARGETS)
	@(./runtests.py $(EBIN) $(MECK))

dialyze: $(TARGETS)
	dialyzer -n -nn -Wunmatched_returns $(EBIN)/*.beam

-include .depend

depend: cleandep $(SRC_MODULES:%=%.dep) $(HRL_FILES:%=%.hrl)
	@echo ""
	@echo "To build CutEr, execute:"
	@echo "  make fast"

%.dep: %.erl
	$(ERLC) $(ERLC_INCLUDE) -M -MT $(patsubst $(SRC)/%.erl,$(EBIN)/%.beam,$<) $< >> .depend

clean:
	$(RM) $(EBIN)/*.beam

cleandep:
	$(RM) .depend

distclean: clean cleandep
	$(RM)

